/*!=========================
      Base grid styles
==========================*/
html, body
  height 100%
body
  font-size 16px
  line-height 1.2
  color #000
  background #fff
.wrapper
  clearfix()
  position relative
  width 1170px
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto
  @media screen and (max-width: 1200px)
    width 750px
.helper
  display table-cell
  vertical-align middle